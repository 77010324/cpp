 int main() {
	double an = 1.0, sn = 1.0;
	int i = 1, k = 1;

	while (1.0 / i * k > 1e-8||1.0/i*k<-1e-8)
	{
		i++;
		i++;
		k = k * (-1);
		an = 1.0 / i * k;
		sn = sn + an;
	}
	cout << sn;
	system("pause");
	return 0;
}





双循环写阶乘和：
 int main() {
	 int i = 1, an = 1, j = 1, sn = 0;
	 while (i <=10) {
		 while (j <= i) {
			 an = an * j;
			 j++;
		 }
		 sn = sn + an;
		 i++;
		 }
	 
	 cout << sn;
	 system("pause");
	return 0;
}
